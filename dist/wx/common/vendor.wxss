
.item-card {
  display: inline-block;
  width: calc(50% - 40rpx);
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.item-img-box {
  border-top-left-radius: 5%;
  border-top-right-radius: 5%;
  position: relative;
  width: 100%;
  height: 0%;
  padding-top: 100%;
}
.item-img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.price-tag {
  display: inline;
  font-size: 32rpx;
  color: rgb(241, 67, 36);
}